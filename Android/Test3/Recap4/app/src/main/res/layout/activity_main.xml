<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculeaza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvBurse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalc">

    </ListView>

    <Button
        android:id="@+id/btnStergereSociale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sterge Sociale"
        app:layout_constraintStart_toEndOf="@+id/btnCalc"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInsereaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserare"
        app:layout_constraintStart_toEndOf="@+id/btnStergereSociale"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>